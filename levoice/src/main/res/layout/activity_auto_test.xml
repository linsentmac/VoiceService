<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinnerDomain"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/dropdown"
        android:layout_x="10dp"
        android:layout_y="10dp" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_x="140dp"
        android:layout_y="10dp"
        android:background="@drawable/selector"
        android:text="开始测试" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_x="250dp"
        android:layout_y="10dp"
        android:background="@drawable/selector"
        android:text="停止" />
    <ScrollView
        android:id="@+id/sc_res"
        android:layout_width="340dp"
        android:layout_height="450dp"
        android:layout_x="10dp"
        android:layout_y="75dp" >

        <TextView
            android:id="@+id/textResult"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择测试领域，开始测试" />
        
    </ScrollView>
     <TextView
        android:id="@+id/voice"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_x="5dp"
        android:layout_y="540dp"
        android:background="#FF0000"
        android:text="音量11111111111111111111111111111111111111111111111111111111111111111111111111	"
       />

</AbsoluteLayout>