<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/start_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="10dp"
        android:layout_y="115dp"
        android:text="启动收音" />

    <Button
        android:id="@+id/cancle_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_x="220dp"
        android:layout_y="115dp"
        android:text="取消" />

    <ScrollView
        android:id="@+id/msgsc"
        android:layout_width="317dp"
        android:layout_height="363dp"
        android:layout_x="10dp"
        android:layout_y="160dp" >

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="" />
    </ScrollView>

    <TextView
        android:id="@+id/voice"
        android:layout_width="36dp"
        android:layout_height="26dp"
        android:layout_x="16dp"
        android:layout_y="530dp"
        android:background="#FF0000"
        android:text="音量11111111111111111111111111111111111111111111111111111111111111111111111111	" />

    <CheckBox
        android:id="@+id/checkBox_domain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="130dp"
        android:layout_y="17dp"
        android:text="do" />

    <EditText
        android:id="@+id/vdm_text"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_x="180dp"
        android:layout_y="14dp"
        android:ems="10"
        android:text="" />

    <CheckBox
        android:id="@+id/checkBox_vdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="292dp"
        android:layout_y="17dp"
        android:text="vdm" />

    <EditText
        android:id="@+id/local_text"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_x="180dp"
        android:layout_y="63dp"
        android:ems="10" />

    <EditText
        android:id="@+id/sce_text"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_x="2dp"
        android:layout_y="59dp"
        android:ems="10" />

    <EditText
        android:id="@+id/domain_text"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_x="2dp"
        android:layout_y="14dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/checkBox_sce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="130dp"
        android:layout_y="70dp"
        android:text="sc" />

    <CheckBox
        android:id="@+id/checkBox_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="292dp"
        android:layout_y="69dp"
        android:text="loc" />

</AbsoluteLayout>