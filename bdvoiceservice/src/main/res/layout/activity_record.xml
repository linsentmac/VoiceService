<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="cn.lenovo.voiceservice.RecordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/keywest_listen_02"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/keywest_listen_03"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <cn.lenovo.voiceservice.view.SeismicWave
        android:id="@+id/seismicwave"
        android:layout_width="@dimen/x245"
        android:layout_height="@dimen/x245"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ball_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:src="@mipmap/keywest_speak_0_30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x64"
        android:text="@string/speek_hint"
        android:textSize="@dimen/x16"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</RelativeLayout>
